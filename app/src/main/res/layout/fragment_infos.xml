<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Description :"/>

            <TextView
                android:id="@+id/description"
                android:layout_below="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:text="Une séléction des locaux commerciaux et artisanaux de la SEMAEST au 31/12/2015 selon leur catégorie d'activité et l'opération qui a permis de les installer."/>

            <TextView
                android:layout_below="@id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:autoLink="web"
                android:text="http://www.semaest.fr"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:paddingHorizontal="20dp"
        android:background="@color/colorPrimary"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:text="Identifiant du jeu de données"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:text="commerces-semaest"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:text="Téléchargements :"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:text="1 312"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:text="Thèmes :"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:text="Commerces et Tourisme"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:text="Mots clés :"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:text="commerces, économie, artisanat, proximité"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:text="Licence :"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:text="Open Database License (ODbL)"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:text="Langue :"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:text="Français"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:text="Modifié :"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:text="9 mars 2016 16:51"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:text="Producteur :"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:text="SEMAEST"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>